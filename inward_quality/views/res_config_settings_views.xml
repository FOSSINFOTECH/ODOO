<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
       <record id="res_config_settings_inventory" model="ir.ui.view">
            <field name="name">res.config.settings.inventory</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="85"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='stock']" position="inside">
                    <h2>Locations</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box" title="test">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Rejection Location" class="col-md-3 o_light_label"/>
                                        <field name="rejection_location" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="assets_backend" name="quality_check assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/inward_quality/static/src/css/stock_quality.css"/> 
            </xpath>
        </template>

        <record id="view_stock_quality_check_form" model="ir.ui.view">
            <field name="name">stock.quality.check.form.view</field>
            <field name="model">stock.quality.check</field>
            <field name="arch" type="xml">
                <form string="Quality Check Details" create="false" edit="true" delete="false">
                  <header>
                      <field name="state" widget="statusbar"/>
                    </header>
                  <sheet>

                    <h1 class="hidden-xs">
                        <field name="number" attrs="{'invisible': [('number','=','/')]}" readonly="1"/>
                    </h1>
                      <group>
                          <group>
                              <field name="product_id" readonly="1"/>
                              <field name="product_uom_id" readonly="1"/>
                              <field name="date" readonly="1"/>
                          </group>
                          <group>
                              <field name="done_qty" readonly="1"/>
                              <field name="pass_qty" required="1" readonly="1"/>
                              <field name="fail_qty" required="1" readonly="1"/>
                              <field name="move_id" invisible="1"/>
                          </group>
                      </group>
                      <group>
                        <field name="reason_of_failure" placeholder="Reason of Failure"/>
                      </group>
                  </sheet>
                  <div class="oe_chatter">
                      <field name="message_follower_ids" widget="mail_followers"/>
                      <field name="activity_ids" widget="mail_activity"/>
                      <field name="message_ids" widget="mail_thread"/>
                  </div>
                </form>
            </field>
        </record>

        <record id="view_stock_quality_check_tree" model="ir.ui.view">
            <field name="name">stock.quality.check.tree.view</field>
            <field name="model">stock.quality.check</field>
            <field name="arch" type="xml">
                <tree string="Quality Check Details" create="false" delete="false">
                    <field name="number"/>
                    <field name="product_id" readonly="1"/>
                    <field name="date"/>
                    <field name="done_qty"/>
                    <field name="pass_qty" required="1"/>
                    <field name="fail_qty" required="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="stock_quality_check_kanban_view" model="ir.ui.view">
            <field name="name">stock.quality.check.kanban.view</field>
            <field name="model">stock.quality.check</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="product_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="number"/>
                                        <br/>
                                    </strong>
                                    <field name="product_id"/>
                                    <br/>
                                    <field name="state" invisible="1"/>
                                    <div t-attf-class="oe_kanban_color_quality_state_1 oe_kanban_bottom_left">
                                      <field name="state" class="oe_kanban_color_quality_state_1" attrs="{'invisible': [('state' ,'!=', 'passed')]}"/>
                                    </div>
                                    <div t-attf-class="oe_kanban_color_quality_state_2 oe_kanban_bottom_left">
                                      <field name="state" class="oe_kanban_color_quality_state_2" attrs="{'invisible': [('state' ,'!=', 'failed')]}"/>
                                    </div>
                                    <div t-attf-class="oe_kanban_color_quality_state_3 oe_kanban_bottom_left">
                                      <field name="state" class="oe_kanban_color_quality_state_3" attrs="{'invisible': [('state' ,'!=', 'partial')]}"/>
                                    </div>
                                </div>
                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
      
        <record id="stock_quality_check_action" model="ir.actions.act_window">
            <field name="name">Quality Checks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.quality.check</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('move_id','!=',False)]</field>
            <field name="view_id" ref="view_stock_quality_check_tree"/> 
        </record>       

        <menuitem name="Quality Check" parent="stock.menu_stock_warehouse_mgmt" id="stock_quality_check_menu" sequence="5"  action="stock_quality_check_action"/>


    </data>
</odoo>

<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_crm_commission_failure_form" model="ir.ui.view">
            <field name="name">view.crm.commission.failure.form</field>
            <field name="model">commissioning.failure</field>
            <field name="arch" type="xml">
                <form string="Commissioning Failure">
                    <group>
                        <field name="name" required="1"/>
                    </group>
                    <footer>
                        <button name="apply_action" string="Apply" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_commissioning_failure" model="ir.actions.act_window">
            <field name="name">Commissioning Failure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">commissioning.failure</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_crm_commission_failure_form"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>


    </data>
</odoo>

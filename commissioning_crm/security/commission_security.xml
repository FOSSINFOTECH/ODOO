<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		<record model="ir.module.category" id="module_crm_commissioning">
	        <field name="name">Commissioning Manager and User Groups</field>
	        <field name="sequence">0</field>
	        <field name="description">Helps you handle commissioning user groups.</field>
    	</record>
		<record id="group_crm_commissioning_manager" model="res.groups">
	        <field name="name">Commissioning Manager</field>
	        <field name="category_id" ref="module_crm_commissioning"/>
    	</record>
    	<record id="group_crm_commissioning_user" model="res.groups">
	        <field name="name">Commissioning User</field>
	        <field name="category_id" ref="module_crm_commissioning"/>
    	</record>
        <record id="commissioning_order_rule_portal" model="ir.rule">
            <field name="name">Portal Personal commmissions</field>
            <field name="model_id" ref="commissioning_crm.model_crm_commission"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>
        <record model="ir.rule" id="commissioning_manager_rule">
            <field name="name">Commissions: see all</field>
            <field name="model_id" ref="model_crm_commission"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('commissioning_crm.group_crm_commissioning_manager'))]"/>
        </record>

    </data>
</odoo>
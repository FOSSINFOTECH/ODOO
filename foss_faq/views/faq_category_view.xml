<?xml version="1.0"?>
<odoo>
    <record model='ir.ui.view' id='faq_category_form'>
        <field name="name">faq.category.form</field>
        <field name="model">faq.category</field>
        <field name="arch" type="xml">
            <form string="FAQ Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="open_faqs" class="oe_stat_button"
                                icon="fa-bars">
                            <field name="faq_count" widget="statinfo" string="# FAQ"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Category name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model='ir.ui.view' id='faq_category_tree'>
        <field name="name">faq.category.tree</field>
        <field name="model">faq.category</field>
        <field name="arch" type="xml">
            <tree string="FAQ Category">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="faq_count"/>
                <button class="oe_stat_button" name="open_faqs" icon="fa fa-search" string="View"
                        type="object" target="new"/>
            </tree>
        </field>
    </record>

    <!-- Project Task Kanban View -->
    <record id="view_category_faq_kanban" model="ir.ui.view">
        <field name="name">FAQ Category</field>
        <field name="model">faq.category</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="faq_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class=" oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                <a class="dropdown-toggle btn" data-toggle="dropdown" href="#">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <li t-if="widget.editable">
                                        <a type="edit">Edit</a>
                                    </li>
                                    <li t-if="widget.deletable">
                                        <a type="delete">Delete</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="o_kanban_record_top">
                                <b class="o_kanban_record_title">
                                    <field name="name"/>- # FAQ
                                    <field name="faq_count"/>
                                </b>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model='ir.ui.view' id='faq_category_search'>
        <field name="name">faq.category.search</field>
        <field name="model">faq.category</field>
        <field name="arch" type="xml">
            <search string="FAQ Category">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model='ir.actions.act_window' id='action_faq_category'>
        <field name="name">FAQ Category</field>
        <field name="res_model">faq.category</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new FAQ Category.
            </p>
        </field>
    </record>

    <menuitem
            id="menu_faq_conf"
            name="Configuration"
            parent="base_menu_faq"
            sequence="10"/>

    <menuitem action="action_faq_category" id="menu_faq_category" name="Categories" parent="menu_faq_conf"
              sequence="1"/>

</odoo>